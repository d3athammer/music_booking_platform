<div class="container">
<div class="card mb-3 mt-3 p-2">
  <h1><%= @room.room_name %></h1>
  <li class="list-group-item">Room Type: <%= @room.room_type %></li>
  <li class="list-group-item">Size: <%= @room.room_size %>&#13217;</li>
  <li class="list-group-item">Price: <%= @room.price %></li>
  <li class="list-group-item">Suggested Pax: <%= @room.total_occupancy %></li>
  <div class="equipment pt-3">
  <h5>Equipment available</h5>
  <table class='table'>
    <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Brand</th>
        </tr>
      </thead>
    <tbody class='fields'>
  <% @room.equipments.each do |equipment| %>
  <tr>
    <td><%= equipment.equipment_type %></td>
    <td><%= equipment.name %></td>
    <td><%= equipment.brand %></td>
  </tr>
  <% end %>
    </tbody>
  </table>
  </div>

  <br>
  <p class="card-text"><%= @room.description %></p>
  <div class="button">
    <%= link_to "Back to Studio", studio_path(@studio), class: 'btn btn-dark mr-2 py-2' %>
    <%= link_to "Edit Room", edit_room_path(@room), class: 'btn btn-dark m-2 py-2' %>
    <%= link_to "Delete Room", room_path(@room), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-outline-danger py-2' %>
  </div>
</div>
</div>
<%= render 'studios/footer' %>
