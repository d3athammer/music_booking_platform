<%= render "pages/navbar" %>

<div class=" edit-account container-fluid col-4 p-5 mt-4">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs input-pills">
    <%= f.input :email, required: true, autofocus: true, input_html:{ class:"input-pills" } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="name-container mb-4 d-flex flex-row justify-content-between">
        <div class="form-outline col-7">
            <%= f.input :first_name, required: true, input_html:{ class:"input-pills" } %>
        </div>
        <div class="form-outline col-4">
            <%= f.input :last_name, required: true, input_html:{ class:"input-pills" }%>
        </div>
    </div>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" }, input_html:{ class:"input-pills" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" }, input_html:{ class:"input-pills" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" }, input_html:{ class:"input-pills" } %>
  </div>

  <div class="form-actions text-center px-20">
    <%= f.button :submit, "Update", class:"button-show" %>
  </div>
<% end %>

<div class="text-center mt-5">
<p>Unhappy? <%= link_to "Cancel my account", cancel_user_registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, method: :delete %></p>
<%= link_to "Back", :back  %>
</div>
</div>

<div class="container col-4" >
<%= simple_form_for(studio) do |f| %>
<div class="create-studio container-fluid mt-5"  data-controller="equipment">
      <% if @studio.id.present? %>
      <h1><%= @studio.name %></h1>
      <% else %>
      <h1 class="mt-3 mb-3 text-center newroom-title">Create your studio</h1>
      <% end %>
      <div class="room-name-input input-border">
          <%= f.input :name, input_html:{class:"input-border room-name", id:"floatingInput"}, label:"Studio name", label_html: { for: 'floatingInput' } %>
      </div>
      <div class="">
          <div class="input-group">
              <%= f.input :address, label: 'studio address', input_html:{class:"input-border"} %>
          </div>
      </div>
      <div class="description-input input-border mb-4 col-6">
          <%= f.input :postal, input_html:{class:"input-border"} %>
      </div>
      <div class="description-input input-border mb-4">
          <%= f.input :description, input_html:{class:"input-border"} %>
      </div>
  <div class="form-actions room-submit-button text-center ">
  <% if @studio.id.present? %>
  <%= f.submit "Update Studio", class: "btn btn-primary button-show mt-4" %>
  <% else %>
  <%= f.submit "Create Studio", class: "btn button-show align-item-center mt-4" %>
  <% end %>
  </div>
<% end %>
</div>
</div>
