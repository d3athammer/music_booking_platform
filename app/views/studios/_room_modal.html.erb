<div class="modal fade" id="exampleModal-<%=room.id%>" tabindex="-1" aria-labelledby="room-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="room-modal-label"><%= room.room_name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="container-fuid">
      <div class="modal-body">
          <%# adding carouhell images %>
          <div class="row">
              <div class="image-carousel col-md-7 col-s-12">
                  <div id="room-control-carousell-<%=room.id%>" class="carousel slide" data-bs-ride="carousel">
                      <div class="carousel-inner">
                          <div class="img-fluid carousel-item active">
                              <img class="d-block w-300 h-200" src="/assets/room2.jpg" alt="First slide">
                          </div>
                          <div class="img-fluid carousel-item">
                              <img class="d-block w-300 h-200" src="/assets/room3.jpg" alt="Second slide">
                          </div>
                          <div class="img-fluid carousel-item">
                              <img class="d-block w-300 h-200" src="/assets/room5.jpg" alt="Third slide">
                          </div>
                      </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#room-control-carousell-<%=room.id%>" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#room-control-carousell-<%=room.id%>" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                  </div>
              </div>
              <div class="modal-text col-5">
                  <h3><%= room.room_type %></h3>
                  <div class="icon-text">
                      <i class="fa-solid fa-dollar-sign modal-icon"></i>
                      <h5>Price</h5>
                      <p>$<%= room.price %>/hr</p>
                  </div>
                  <div class="icon-text mt-3">
                      <i class="fa-solid fa-house modal-icon"></i>
                      <h5>Room Size</h5>
                      <p><%= room.room_size %>&#13217</p>
                  </div>
                  <div class="icon-text mt-3">
                      <i class="fa-solid fa-user-group modal-icon"></i>
                      <h5>Occupancy</h5>
                      <p><%= room.total_occupancy %> Pax</p>
                  </div>
                  <div class="mt-3">
                      <div class="icon-text">
                          <i class="fa-solid fa-guitar modal-icon"></i>
                          <h5>Room description</h5>
                      </div>
                      <p class="mt-3 col-11"><%= room.description %></p>
                  </div>
              </div>
          </div>
          <div class="equipment-container col-7 mt-4 justify-center">
              <div class="scrollbar overflow-auto">
              <table class='table'>
                  <thead>
                      <tr>
                        <th><h5>Equipment type</h5></th>
                        <th><h5>Name</h5></th>
                        <th><h5>Brand</h5></th>
                      </tr>
                    </thead>
                <tbody>
                <% room.equipments.each do |equipment| %>
                  <tr>
                    <td><%= equipment.equipment_type %></td>
                    <td><%= equipment.name %></td>
                    <td><%= equipment.brand %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
              </div>
        </div>
          <%# end of carohell images top %>
      </div>
      </div>
      <div class="modal-footer">

        <%# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> %>
        <%# <button type="button" class="btn btn-primary">Save changes</button> %>
      </div>
    </div>
  </div>
</div>

