<%= render "navbar" %>
<div class="container-for-list extra-top">
            <h1><span><%= link_to "", studio_path(@room.studio), class: "fa-solid fa-chevron-left back-btn text-decoration-none border rounded p-2 text-dark border-secondary" %></span>Request booking</h1>
            <div class="studio"></div>
    <div class="list-container mt-0">
        <div class="resv-left-col">
            <h2 class="mb-3 mt-0">Review your reservation for room "<%= @room.room_name %>" below</h2>
            <div class="studio-info border p-4 pt-4 border-secondary">
                <h3>Start date</h3>
                <p><%= @date != "" ? @date : "please pick your date" %></p>
                <h3>Start time</h3>
                <p><%= @time != "" ? @time : "please select your time" %><%= @time %></p>
                <h3>Duration</h3>
                <p><%= @duration != "" ? @duration : "please select your duration" %> hours</p>
            </div>
        </div>
    <div class="resv-right-col">

        <h2 class="mb-3 mt-0"><%= @room.room_name %></h2>
        <div class="studio-img card-product pt-0">
            <img src="/assets/room2.jpg" alt="" class="rounded">
            <div class="card-product-infos">
                <h2>Product name</h2>
                <p>Product description with <strong>relevant info</strong> only.</p>
            </div>
        </div>
        <div class="studio-info border p-4 pt-4 mt-4 border-secondary">
            <h2>Price details</h2>
            <h3>Price</h3>
            <div class="filter"><p>$<%= @room.price%> SGD x <%= @duration %> hours</p><span>$ <%= @room.price * @duration.to_f %> SGD</span></div>
            <h3>Booking fee</h3>
            <div class="filter"><p>$0</p><span>$0</span></div>
            <h3>GST (7%)</h3>
            <div class="filter"><p>$<%= (@room.price * @duration.to_f)* 0.07 %> SGD</p><span>$0</span></div>
            <hr class="line">
            <h3>Grand Total</h3>
            <div class="filter">
                <p class="mb-0">$<%= @room.price * @duration.to_f %> + $0 + $<%= (@room.price * @duration.to_f)* 0.07 %></p>
                <span class="h2">$<%= ((@room.price * @duration.to_f) + (@room.price * @duration.to_f* 0.07)).round(2) %> SGD</span>
            </div>
            <%= link_to "Secure your reservation",  %>
            <button type="submit">Check Availability</button>
        </div>
    </div>
    </div>
</div>

<%= render "footer" %>
