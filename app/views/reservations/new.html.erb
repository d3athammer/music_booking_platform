<div class="container">
<h1>Make your reservations here</h1>

<%= simple_form_for [@room, @reservation] do |f| %>
  <%= f.input :date %>
  <%= f.input :start_time, collection: timeslot.time.to_a %>
  <%= f.input :num_hours, label: "" %>
  <%= f.submit "Make Reservations", class: "btn btn-primary" %>
<% end %>
</div>
